# Production Environment Configuration for Veer Nirman Backend

# Gemini AI Configuration
GEMINI_API_KEY=your_production_gemini_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name
# For SQLite (development/testing): sqlite:///./ncc_abyas.db

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=production

# Security Settings
SECRET_KEY=your_production_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_production_jwt_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (Production URLs)
CORS_ORIGINS=https://veer-nirman.web.app,https://veer-nirman.firebaseapp.com

# File Upload Settings
UPLOAD_FOLDER=/tmp/uploads
MAX_FILE_SIZE=10485760

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_FILE=/var/log/veer-nirman-backend.log

# Health Check
HEALTH_CHECK_INTERVAL=30
